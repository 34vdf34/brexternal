[Unit]
Description=Glorytun path
After=glorytun-ip.service sys-devices-virtual-net-tun0.device

[Service]
Type=simple
EnvironmentFile=/opt/tunnel/glorytun.env
WorkingDirectory=/opt/tunnel
ExecStartPre=/bin/sh -c "systemctl set-environment HOST_IP=$(ip -o r get 8.8.8.8 | awk '{ print $7 }')"
ExecStart=glorytun path up ${HOST_IP} rate tx ${TX_BW} rx ${RX_BW}
CapabilityBoundingSet=CAP_NET_ADMIN


